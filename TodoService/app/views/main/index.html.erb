	}

	function ajaxHelper(method, url, jsonData, successFn, failureFn) {
		$.ajax({
			type: method,
			url: url,
			data: JSON.stringify(jsonData),
			contentType: "application/json; charset=utf-8",
			dataType: "json",
			success: successFn,
			failure: failureFn
		});
	}
